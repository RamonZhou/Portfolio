---
import Card from "./Card/index.astro";
import { LINKS } from "../lib/constants";

interface Props {
  hidden?: string;
}

const { hidden } = Astro.props;
---

<Card colSpan="md:col-span-1" rowSpan="md:row-span-5 lg:row-span-4" hidden={hidden || ""}>
